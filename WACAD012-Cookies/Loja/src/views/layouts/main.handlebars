<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <link
      href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css'
      rel='stylesheet'
      integrity='sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB'
      crossorigin='anonymous'
    />
    <link
      rel='stylesheet'
      href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css'
    />
    <link rel='stylesheet' href='/css/main.css' />
    <title>Minha Loja</title>
  </head>
  <body>
    <nav class='navbar navbar-expand-lg {{#if themeLight}} bg-body-tertiary {{else}} bg-dark {{/if}} px-2' data-bs-theme="{{theme}}">
      <div class='container-fluid'>
        <a class='navbar-brand' href='/'>Loja Virtual</a>
        <button
          class='navbar-toggler'
          type='button'
          data-bs-toggle='collapse'
          data-bs-target='#navbarSupportedContent'
          aria-controls='navbarSupportedContent'
          aria-expanded='false'
          aria-label='Toggle navigation'
        >
          <span class='navbar-toggler-icon'></span>
        </button>
        <div class='collapse navbar-collapse' id='navbarSupportedContent'>
          <ul class='navbar-nav me-auto mb-2 mb-lg-0'>
            <li class='nav-item'>
              <a class='nav-link' href='/sobre'>Sobre</a>
            </li>
            <li class='nav-item'>
              <a class='nav-link' href='/product'>Produtos</a>
            </li>
            <li class='nav-item dropdown'>
              <a
                class='nav-link dropdown-toggle'
                href='#'
                role='button'
                data-bs-toggle='dropdown'
                aria-expanded='false'
              >
                Handlebars
              </a>
              <ul class='dropdown-menu'>
                <li><a class='dropdown-item' href='/hb1'>HB1</a></li>
                <li><a class='dropdown-item' href='/hb2'>HB2</a></li>
                <li><a class='dropdown-item' href='/hb3'>HB3</a></li>
                <li><a class='dropdown-item' href='/hb4'>HB4</a></li>
                <li><a class='dropdown-item' href='/hb5'>HB5</a></li>
              </ul>
            </li>
            <li class='nav-item dropdown'>
              <a
                class='nav-link dropdown-toggle'
                href='#'
                role='button'
                data-bs-toggle='dropdown'
                aria-expanded='false'
              >
                Mudar Tema
              </a>
              <ul class='dropdown-menu'>
                <li><a class='dropdown-item' href='/change-theme/light'>Light</a></li>
                <li><a class='dropdown-item' href='/change-theme/dark'>Dark</a></li>
              </ul>
            </li>
          </ul>
          <div>
            <ul class='navbar-nav me-auto mb-2 mb-lg-0'>
              <li class='nav-item'>
               <a class="nav-link" href="/auth/signup">Criar conta</a>
              </li>
              <li class='nav-item'>
               <a class="nav-link px-3" href="/auth/signup">Login</a>
              </li>
              <li class='nav-item'>
               <a href="/purchase/cart"><i class="bi bi-cart2 fs-3 {{#if themeLight}} text-black {{else}}text-white {{/if}}"></i></a>
              </li>
          </div>
        </div>
      </div>
    </nav>
    <div class='container mt-4'>
      {{{body}}}
    </div>
    <script src='/js/script.js'></script>
    <script
      src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js'
      integrity='sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI'
      crossorigin='anonymous'
    ></script>
  </body>
</html>