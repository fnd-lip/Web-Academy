<div class='mb-3'>
  <label for='name' class='form-label'>Nome</label>
  <input
    type='text'
    name='name'
    class='form-control {{#if errors.name}}is-invalid{{/if}}'
    id='name'
    value='{{product.name}}'
    placeholder='Ex:Notebook Dell G15, Teclado RGB, etc...'
  />
  <div class="invalid-feedback">
    {{errors.name}}
  </div>
</div>

<div class='mb-3'>
  <label for='price' class='form-label'>Preço</label>
  <input
    type='number'
    name='price'
    class='form-control {{#if errors.price}}is-invalid{{/if}}'
    value='{{product.price}}'
    id='price'
  />
  <div class="invalid-feedback">
    {{errors.price}}
  </div>
</div>

<div class='mb-3'>
  <label for='stock' class='form-label'>Quantidade em stock</label>
  <input
    type='number'
    name='stock'
    class='form-control {{#if errors.stock}}is-invalid{{/if}}'
    value='{{product.stock}}'
    id='stock'
  />
  <div class="invalid-feedback">
    {{errors.stock}}
  </div>
</div>

<div class='mb-3'>
  <label for='description' class='form-label'>Descrição do Produto</label>
  <textarea
    class='form-control {{#if errors.description}}is-invalid{{/if}}'
    id='description'
    name='description'
    rows='3'
  >{{product.description}}</textarea>
  <div class="invalid-feedback">
    {{errors.description}}
  </div>
</div>
{{#if product.image}}
<img src="{{product.image}}" alt="" width="200"/>

{{/if}}
<div class='mb-3'>
  <label for='image' class='form-label'>Foto do produto</label>
  <input
    class='form-control {{#if errors.image}}is-invalid{{/if}}'
    type='file'
    id='formFile'
    name='image'
    value='{{product.image}}'
  />
  <div class="invalid-feedback">
    {{errors.image}}
  </div>
</div>
